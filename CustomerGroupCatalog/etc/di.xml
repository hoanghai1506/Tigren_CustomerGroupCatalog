<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Tigren\CustomerGroupCatalog\Api\RuleRepositoryInterface"
                type="Tigren\CustomerGroupCatalog\Model\RuleRepository"/>
    <preference for="Tigren\CustomerGroupCatalog\Api\Data\RuleInterface" type="Tigren\CustomerGroupCatalog\Model\Rule"/>
    <preference for="Tigren\CustomerGroupCatalog\Api\Data\RuleSearchResultsInterface"
                type="Magento\Framework\Api\SearchResults"/>
    <virtualType name="Tigren\CustomerGroupCatalog\Model\ResourceModel\Rule\Grid\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">tigren_customergroupcatalog_rule</argument>
            <argument name="resourceModel" xsi:type="string">
                Tigren\CustomerGroupCatalog\Model\ResourceModel\Rule\Collection
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="tigren_customergroupcatalog_rule_listing_data_source" xsi:type="string">
                    Tigren\CustomerGroupCatalog\Model\ResourceModel\Rule\Grid\Collection
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Catalog\Model\Product">
        <plugin name="hidebutton" type="Tigren\CustomerGroupCatalog\Plugin\HideButton" sortOrder="1"/>
    </type>
    <type name="Magento\Checkout\Model\Cart">
        <plugin name="interceptAddingProductToCart"
                type="Tigren\CustomerGroupCatalog\Plugin\Model\Checkout\Cart\Plugin"
                sortOrder="10"
                disabled="false"/>
    </type>
    <type name="Magento\Catalog\Model\Product">
        <plugin name="change_product" type="Tigren\CustomerGroupCatalog\Plugin\ChangeProductPrice" sortOrder="1"
                disabled="false"/>
    </type>


    <preference for="Magento\Catalog\Pricing\Render\FinalPriceBox"
                type="Tigren\CustomerGroupCatalog\Pricing\Render\FinalPriceBox"/>
    <preference for="Magento\ConfigurableProduct\Pricing\Render\FinalPriceBox"
                type="Tigren\CustomerGroupCatalog\Pricing\Render\FinalPriceBox"/>
</config>
